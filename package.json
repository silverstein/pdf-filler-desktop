{
  "name": "pdf-filler-desktop",
  "version": "1.0.0",
  "description": "Free PDF processing powered by Gemini CLI",
  "main": "dist/electron.js",
  "scripts": {
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean && npm run build:ts",
    "start": "npm run build:ts && electron dist/electron.js",
    "start:dev": "npm run build:ts && electron dist/electron.js",
    "server": "npm run build:ts && node dist/server.js",
    "server:dev": "ts-node src/server.ts",
    "dev": "nodemon --watch src --ext ts --exec 'npm run build:ts && node dist/server.js'",
    "electron": "npm run build:ts && electron dist/electron.js",
    "build": "npm run prebuild && electron-builder && node scripts/post-build.js",
    "setup": "node scripts/setup.js",
    "postinstall": "npm install @google/gemini-cli --prefix ./gemini-cli-local",
    "gemini": "./gemini-cli-local/node_modules/.bin/gemini",
    "gemini-auth": "./gemini-cli-local/node_modules/.bin/gemini auth login",
    "test:ai": "ts-node src/test-ai-service.ts"
  },
  "keywords": [
    "pdf",
    "gemini",
    "ai",
    "free"
  ],
  "author": "Mat Silverstein (x1wealth.com)",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/server-filesystem": "^2025.7.29",
    "ai": "^5.0.22",
    "ai-sdk-provider-gemini-cli": "^1.1.0",
    "archiver": "^7.0.1",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "csv-stringify": "^6.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^1.1.1",
    "pdfjs-dist": "^5.4.54",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.3.0",
    "@types/pdf-parse": "^1.1.5",
    "electron": "^37.4.0",
    "electron-builder": "^24.9.1",
    "fs-extra": "^11.3.1",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "build": {
    "appId": "com.gemini.pdffiller",
    "productName": "PDF Filler",
    "icon": "assets/icon.icns",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "public/**/*",
      "gemini-cli-local/**/*",
      "!gemini-cli-local/.gemini/**/*",
      "!gemini-cli-local/node_modules/**/test/**",
      "!gemini-cli-local/node_modules/**/tests/**",
      "!gemini-cli-local/node_modules/**/*.md",
      "!gemini-cli-local/node_modules/**/LICENSE",
      "!gemini-cli-local/node_modules/**/.npmignore",
      "assets/**/*",
      "scripts/**/*",
      "uploads/.gitkeep",
      "node_modules/@modelcontextprotocol/**/*",
      "package.json",
      "CLAUDE.md",
      "README.md"
    ],
    "includeSubNodeModules": true,
    "asarUnpack": [
      "gemini-cli-local/**/*",
      "uploads/**/*",
      "node_modules/@modelcontextprotocol/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
