{
  "name": "pdf-filler-desktop",
  "version": "1.0.0",
  "description": "Free PDF processing powered by Gemini CLI",
  "main": "src/electron.js",
  "scripts": {
    "start": "electron src/electron.js",
    "server": "node src/server.js",
    "dev": "nodemon src/server.js",
    "electron": "electron src/electron.js",
    "build": "electron-builder && node scripts/post-build.js",
    "setup": "node scripts/setup.js",
    "postinstall": "npm install @google/gemini-cli --prefix ./gemini-cli-local",
    "gemini": "./gemini-cli-local/node_modules/.bin/gemini",
    "gemini-auth": "./gemini-cli-local/node_modules/.bin/gemini auth login"
  },
  "keywords": [
    "pdf",
    "gemini",
    "ai",
    "free"
  ],
  "author": "Mat Silverstein (x1wealth.com)",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/server-filesystem": "^2025.7.29",
    "archiver": "^7.0.1",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "csv-stringify": "^6.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^1.1.1",
    "pdfjs-dist": "^5.4.54"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "fs-extra": "^11.3.1",
    "nodemon": "^3.0.2"
  },
  "build": {
    "appId": "com.gemini.pdffiller",
    "productName": "PDF Filler",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "public/**/*",
      "gemini-cli-local/**/*",
      "assets/**/*",
      "scripts/**/*",
      "uploads/.gitkeep",
      "node_modules/@modelcontextprotocol/**/*",
      "package.json",
      "CLAUDE.md",
      "README.md"
    ],
    "asarUnpack": [
      "gemini-cli-local/**/*",
      "uploads/**/*",
      "node_modules/@modelcontextprotocol/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
